
{
	"manifest_version": 3,
	"name": "KTP Starter Extension",
	"version": "0.1.0",
	"description": "A minimal Chrome Manifest V3 starter extension scaffold for the KTP project.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage",
		"scripting",
		"activeTab"
	],
	"host_permissions": [
		"https://www.netflix.com/*"
	],
	"content_scripts": [
		{
			"matches": ["https://www.netflix.com/*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	]
}
