
{
	"manifest_version": 3,
	"name": "Movie Journal",
	"version": "0.2.0",
	"description": "Log movies and shows you watch, write reviews, and annotate scenes with timestamp-based notes.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png"
		}
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": [
		"storage",
		"scripting",
		"activeTab"
	],
	"host_permissions": [
		"https://*.netflix.com/*"
	],
	"content_scripts": [
		{
			"matches": ["https://www.netflix.com/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	]
}
